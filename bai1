#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include <ctype.h>
#include <string.h>

// Hàm kiểm tra xem chuỗi có phải là số hợp lệ hay không
bool isNumber(char *str) {
    for (int i = 0; str[i] != '\0'; i++) {
        if (!isdigit(str[i]) && str[i] != '-' && str[i] != '+') {
            return false;
        }
    }
    return true;
}

// Hàm sắp xếp mảng theo thứ tự tăng dần
void sortArray(int arr[], int n) {
    int temp;
    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            if (arr[i] > arr[j]) {
                temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
    }
}

// Hàm kiểm tra xem mảng có phải là dãy số tăng dần không
bool isSortedAscending(int arr[], int n) {
    for (int i = 0; i < n - 1; i++) {
        if (arr[i] > arr[i + 1]) {
            return false;
        }
    }
    return true;
}

int main() {
    int n;
    printf("Nhap so luong phan tu cua day: ");
    if (scanf("%d", &n) != 1 || n <= 0) {
        printf("Loi: Gia tri nhap vao khong hop le.\n");
        return 1;
    }

    int arr[n];
    char input[50];

    printf("Nhap cac phan tu cua day: ");
    for (int i = 0; i < n; i++) {
        scanf("%s", input);
        if (!isNumber(input)) {
            printf("Loi: Ky tu nhap vao khong hop le.\n");
            return 1;
        }
        arr[i] = atoi(input);
    }

    if (isSortedAscending(arr, n)) {
        printf("Day so nay la day so tang dan.\n");
    } else {
        printf("Day so nay khong phai la day so tang dan.\n");
    }

    printf("Ho ten: Pham Van Hoai\n");

    printf("Day so da sap xep: ");
    sortArray(arr, n);
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
